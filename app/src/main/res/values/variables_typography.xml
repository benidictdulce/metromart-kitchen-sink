<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Variables.Typography" parent="Variables.Dimensions">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--
        NOTE: Typography deals per character basis AND not the entire line of text.
        Text Color & Line Height does not apply in here. Add them to `styles.xml`
    -->
    <style name="TextAppearance.LargeTitle" parent="">
        <item name="fontFamily">@font/jost_semibold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Title1" parent="">
        <item name="fontFamily">@font/jost_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Title2" parent="">
        <item name="fontFamily">@font/jost_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Title3" parent="">
        <item name="fontFamily">@font/jost_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Headline" parent="">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Body" parent="">
        <item name="fontFamily">@font/jost_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Body.Medium">
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="TextAppearance.Callout" parent="">
        <item name="fontFamily">@font/jost_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Subheadline" parent="">
        <item name="fontFamily">@font/jost_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Subheadline.Medium">
        <item name="fontFamily">@font/jost_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Footnote" parent="">
        <item name="fontFamily">@font/jost_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Footnote.SemiBold" parent="TextAppearance.Footnote">
        <item name="fontFamily">@font/jost_semibold</item>
    </style>

    <style name="TextAppearance.Caption" parent="">
        <item name="fontFamily">@font/jost_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <style name="TextAppearance.Caption.Semibold">
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="TextAppearance.NavigationLabel" parent="">
        <item name="fontFamily">@font/jost_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
    </style>

    <!--  region Line Height  -->
    <dimen name="line_height_large_title">48dp</dimen>
    <dimen name="line_height_title1">32dp</dimen>
    <dimen name="line_height_title2">32dp</dimen>
    <dimen name="line_height_title3">24dp</dimen>
    <dimen name="line_height_headline">24dp</dimen>
    <dimen name="line_height_body">24dp</dimen>
    <dimen name="line_height_callout">21dp</dimen>
    <dimen name="line_height_subheadline">16dp</dimen>
    <dimen name="line_height_footnote">16dp</dimen>
    <dimen name="line_height_caption">13dp</dimen>
    <dimen name="line_height_navigation_label">12dp</dimen>
    <!--  endregion  -->
</resources>